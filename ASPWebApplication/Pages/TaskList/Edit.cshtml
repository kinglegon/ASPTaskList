@page
@model ASPWebApplication.Pages.TaskList.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Tasks</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Tasks.TaskId" />
            <div class="form-group">
                <label asp-for="Tasks.TaskDate" class="control-label"></label>
                <input asp-for="Tasks.TaskDate" class="form-control" />
                <span asp-validation-for="Tasks.TaskDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tasks.PersonId" class="control-label"></label>
                <select asp-for="Tasks.PersonId" class="form-control" asp-items="ViewBag.PersonId"></select>
                <span asp-validation-for="Tasks.PersonId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tasks.Task" class="control-label"></label>
                <input asp-for="Tasks.Task" class="form-control" />
                <span asp-validation-for="Tasks.Task" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Tasks.Completed" /> @Html.DisplayNameFor(model => model.Tasks.Completed)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
